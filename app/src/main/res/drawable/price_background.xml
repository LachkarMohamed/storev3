<!-- res/drawable/price_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft shadow base -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#1002587C"/>
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Main container -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:angle="135"
                android:startColor="#2A3A7E"
                android:endColor="#3A4A8E"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#505A72" />
        </shape>
    </item>

    <!-- Subtle accent line -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke
                android:width="0.7dp"
                android:color="#6C7A9F" />
        </shape>
    </item>

</layer-list>